<!DOCTYPE html>
<html lang="zh-CN">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
        <meta name="description" content="" />
        <meta name="format-detection" content="telephone=no" />
        <meta name="format-detection" content="email=no" />
        <title><%= htmlWebpackPlugin.options.title %></title>
        <% if (htmlWebpackPlugin.options.useSwiper) { %>
        <link rel="stylesheet" href="https://s.xingbianli.cn/manual/swiper/swiper.min.css">
        <% } %>
    </head>

    <body ontouchstart="">
        <div id="app"></div>
        <script>
            (function() {
                var size = 100, maxWidth = 750;
                var ratio = function(){
                    var r = document.documentElement.clientWidth / maxWidth;
                    return r >= 1 ? 1 : r <= 0.234 ? 0.234 : r;
                };
                document.documentElement.style.fontSize = ratio() * size +'px';
            }())
        </script>
        <% if (htmlWebpackPlugin.options.injectWxSDK) { %>
        <script type="text/javascript" src="https://res.wx.qq.com/open/js/jweixin-1.3.2.js"></script>
        <% } %>
        <% if (htmlWebpackPlugin.options.useSwiper) { %>
        <script type="text/javascript" src="https://s.xingbianli.cn/manual/swiper/swiper.min.js"></script>
        <% } %>
    </body>
</html>
